<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BerandaFragment"
    android:orientation="vertical"
    android:background="@drawable/bgyuda">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi Sistem Pakar"
        android:textSize="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daihatsu Ayla"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="@drawable/bg_rounded_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/btn_diagnosa"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/diagnosa"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_data"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/kerusakan"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:padding="20dp">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/map"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/mapss"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_kontak"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/contact"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:padding="20dp">

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>